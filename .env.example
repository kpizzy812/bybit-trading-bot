# ============================================================
# TELEGRAM BOT
# ============================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Owner Telegram ID (опционально, для дополнительной безопасности)
# Если установлен (не 0), то только owner сможет использовать бота
# Чтобы узнать свой ID: напишите @userinfobot в Telegram
OWNER_TELEGRAM_ID=0


# ============================================================
# BYBIT API (Trade only, NO Withdraw!)
# ============================================================
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Bybit Testnet API (for testing)
BYBIT_TESTNET_API_KEY=your_testnet_api_key_here
BYBIT_TESTNET_API_SECRET=your_testnet_api_secret_here


# ============================================================
# SYNTRA AI API (аналитическая система)
# ============================================================
# URL Syntra AI API (по умолчанию localhost:8000)
SYNTRA_API_URL=http://localhost:8000

# API Key для Syntra AI (если требуется аутентификация)
# SYNTRA_API_KEY=your_syntra_api_key_here

# Таймаут запросов к Syntra AI (секунды)
SYNTRA_API_TIMEOUT=30

# Включить AI Scenarios в боте (true/false)
AI_SCENARIOS_ENABLED=true


# ============================================================
# REDIS (optional, leave empty for in-memory storage)
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # оставьте пустым или закомментируйте если пароль не нужен


# ============================================================
# BOT SETTINGS
# ============================================================
DEFAULT_TESTNET_MODE=true
LOG_LEVEL=INFO


# ============================================================
# TRADING CAPITAL
# ============================================================
# Режим капитала: manual (фиксированная сумма) или auto (весь баланс)
TRADING_CAPITAL_MODE=manual

# Фиксированный торговый капитал (для manual mode)
# Рекомендуется для безопасности - бот не будет использовать весь баланс
TRADING_CAPITAL_USD=500


# ============================================================
# DEFAULT TRADING SETTINGS
# ============================================================
DEFAULT_RISK_USD=10
DEFAULT_LEVERAGE=5
DEFAULT_MARGIN_MODE=Isolated
DEFAULT_TP_MODE=rr
DEFAULT_TP_RR=2.0
DEFAULT_SHORTS_ENABLED=false


# ============================================================
# SAFETY LIMITS (критично!)
# ============================================================
# Максимальный риск на сделку (для депо $500 → рекомендуется $10-20)
MAX_RISK_PER_TRADE=20

# Максимальная маржа на сделку (для депо $500 → рекомендуется $100-150)
MAX_MARGIN_PER_TRADE=150

# Максимальный notional (qty * price) на сделку
MAX_NOTIONAL_PER_TRADE=1500

# Максимальное плечо
MAX_LEVERAGE=10


# ============================================================
# SECURITY SETTINGS
# ============================================================
# Всегда требовать подтверждение перед размещением ордера
CONFIRM_ALWAYS_DEFAULT=true


# ============================================================
# EXECUTION SETTINGS (опционально)
# ============================================================
MARKET_ORDER_TIMEOUT=20
MARKET_ORDER_POLL_INTERVAL=0.5
TRADE_LOCK_TTL=20


# ============================================================
# POSITION MONITORING (автоматические уведомления)
# ============================================================
# Интервал проверки позиций в секундах
# Рекомендуется 15-30 сек для баланса между нагрузкой и скоростью уведомлений
POSITION_MONITOR_INTERVAL=15
